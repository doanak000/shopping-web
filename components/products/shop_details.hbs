<script>
      $('#post-rating').on('click', e => {
          e.preventDefault();
          //let rating = $('input[name=rating]').val();
          let rating = $('input[name="rating"]:checked').val();
          let content = $('textarea[name=content]').val();
          let productId = $('input[name="productId"]').val();
          let customer = $('input[name="customer"]').val();
          if (customer == ""){
              customer = "Noname"
          }
          $.ajax({
            url: '/shop-details/rate',
            method: 'POST',
            data: {
              rating: rating,
              content: content,
              productId: productId,
              customer: customer,
            },
            success: function(data) {
              console.log(data);
              loadRatings();
            }
          })
      });

      //Load ratings
      function loadRatings(){
          $.getJSON(`/shop-details/product/${$('input[name=productId]').val()}/ratings`, function(data){
            let rating = data.rating;
            let content = data.content;
            let customer = data.customer;
            let html = '';
            for(const rating of data){
                html += '<h6 class="cust-name">' + rating.customer + '</h6>';
                for(let i=0; i<rating.rating; i++){
                    html += '<i class="fa fa-star rating-star"></i>';
                }
                for (let i=0; i<5-rating.rating;i++){
                    html += '<i class="fa fa-star-o rating-star"></i>';
                }
                html += `<p>${rating.content}</p>`
            }
            $('#ratings').html(html);
        });
      }
      loadRatings();
    </script>


