  <!-- Breadcrumb Section Begin -->
  <section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="breadcrumb__text">
            <h2>Profile</h2>
            <div class="breadcrumb__option">
              <a href="/">Home</a>
              <span>Profile</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb Section End -->

  <!-- Checkout Section Begin -->
  <section class="checkout spad">
    <div class="container">
      <div class="checkout__form">
        <h4>CHANGE PASSWORD</h4>
        <form method="POST" action="/profile/changepassword/edit?_method=PATCH">
          <div class="row">
            <div class="col-lg-8 col-md-6">
            {{#if user}}
              <input type="hidden" name="username" value="{{user.account}}"/>
              <div class="checkout__input">
                <p>Current password:</p>
                <input type="password" name="currentpassword"/>
                 {{#if err0}}
                      <div style="color: red;">{{err0}}</div>
                {{/if}}
              </div>
              <div class="checkout__input">
                <p>New password:</p>
                <input type="password" name="newpassword"/>
                 {{#if err1}}
                      <div style="color: red;">{{err1}}</div>
                {{/if}}
              </div>
              <div class="checkout__input">
                <p>Confirm new password:</p>
                <input
                  type="password"
                  class="checkout__input__add"
                  name="confirmnewpassword"/>
                   {{#if err2}}
                      <div style="color: red;">{{err2}}</div>
                {{/if}}
              </div>
              <button type="submit" class="primary-btn send-btn button-solid" id="changepassword">SUBMIT</button>
            {{/if}}
            </div>
            <div class="col-lg-4 col-md-6">
              <div class="checkout__order">
                <h4>Avatar</h4>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
  <!-- Checkout Section End -->

  <script>
    document.getElementById("save-profile").hidden = true;
    function enableForm(){
      document.getElementsByName("name")[0].disabled = false;
      document.getElementsByName("birthday")[0].disabled = false;
      document.getElementsByName("address")[0].disabled = false ;
      document.getElementById("save-profile").hidden = false;
    }
  </script>

 
